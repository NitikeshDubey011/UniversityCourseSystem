<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/c_name_table"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="cu_mit01" />

    <TextView
        android:id="@+id/c_day_table"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/c_name_table"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="cu_mit01" />

    <TextView
        android:id="@+id/c_time_from"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/c_day_table"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:text="cu_mit01" />

    <TextView
        android:id="@+id/c_time_to"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/c_time_from"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:text="cu_mit01" />

    <ImageView
        android:id="@+id/c_check_box_table"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/check" />

</LinearLayout>